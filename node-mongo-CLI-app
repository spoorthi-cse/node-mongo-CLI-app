const mongoose = require('mongoose');
const readline = require('readline');

// Connect to MongoDB
const mongoURI = 'mongodb://localhost:27017/studentdb';
mongoose.connect(mongoURI, {
  useNewUrlParser: true,
  useUnifiedTopology: true
}).then(() => {
  showMenu();
}).catch(err => console.error('‚ùå Connection Error:', err));

// Define Schema & Model
const studentSchema = new mongoose.Schema({
  name: String,
  age: Number,
  course: String
});
const Student = mongoose.model('Student', studentSchema);

// CLI Setup
const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

// Menu Function
function showMenu() {
  console.log(`\n--- Student Management CLI ---
1. Insert Student
2. View All Students
3. Update Student
4. Delete Student
5. Exit
-------------------------------`);
  rl.question('Choose an option (1-5): ', handleMenu);
}

// Handle Menu Choices
function handleMenu(choice) {
  switch (choice.trim()) {
    case '1':
      insertStudent();
      break;
    case '2':
      viewStudents();
      break;
    case '3':
      updateStudent();
      break;
    case '4':
      deleteStudent();
      break;
    case '5':
      console.log('üëã Exiting...');
      rl.close();
      mongoose.disconnect();
      break;
    default:
      console.log('‚ùå Invalid choice. Try again.');
      showMenu();
  }
}

// Insert Student
function insertStudent() {
  rl.question('Enter name: ', name => {
    rl.question('Enter age: ', age => {
      rl.question('Enter course: ', course => {
        const student = new Student({ name, age: Number(age), course });
        student.save()
          .then(() => {
            console.log('‚úÖ Student inserted successfully.');
            showMenu();
          })
          .catch(err => {
            console.error('‚ùå Insert failed:', err);
            showMenu();
          });
      });
    });
  });
}

// View Students
function viewStudents() {
  Student.find()
    .then(students => {
      console.log('\nüìÑ Student Records:');
      students.forEach((s, index) => {
        console.log(`${index + 1}. ${s.name}, Age: ${s.age}, Course: ${s.course}, ID: ${s._id}`);
      });
      showMenu();
    })
    .catch(err => {
      console.error('‚ùå Error fetching students:', err);
      showMenu();
    });
}

// Update Student
function updateStudent() {
  rl.question('Enter Student ID to update: ', (id) => {
    const trimmedId = id.trim();
    rl.question('New name: ', (name) => {
      rl.question('New age: ', (age) => {
        rl.question('New course: ', (course) => {
          Student.findOneAndUpdate(
            { _id: trimmedId },
            { name, age, course },
            { new: true }
          )
            .then(student => {
              if (student) {
                console.log('‚úÖ Student updated:', student);
              } else {
                console.log('‚ùå Student not found.');
              }
              showMenu();
            })
            .catch(err => {
              console.error('‚ùå Update error:', err);
              showMenu();
            });
        });
      });
    });
  });
}

// Delete Student
function deleteStudent() {
  rl.question('Enter Student ID to delete: ', (id) => {
    const trimmedId = id.trim();
    Student.findByIdAndDelete(trimmedId)
      .then(student => {
        if (student) {
          console.log('‚úÖ Student deleted:', student);
        } else {
          console.log('‚ùå Student not found.');
        }
        showMenu();
      })
      .catch(err => {
        console.error('‚ùå Delete error:', err);
        showMenu();
      });
  });
}
